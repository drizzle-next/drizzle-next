{{#layout}}
  <section>
    <div class="container flex flex-col gap-8 mx-auto px-6 py-16 text-center  p-5 rounded-xl">
      <h1 class="text-4xl md:text-6xl font-bold leading-tight">
        Full Stack TypeScript Scaffolding Framework
      </h1>
      <p class="text-3xl">
        Build Next.js Apps Easier and Faster With:
      </p>
      <div class="flex flex-col gap-2 m-auto items-center w-full text-xl p-5 rounded">
        <ul class="text-left">
          <li>✅ Ruby on Rails Inspired &mdash; Scaffold Automations</li>
          <li>✅ shadcn/ui &mdash; Customizable Components</li>
          <li>✅ Drizzle ORM &mdash; Database Migrations and Queries</li>
          <li>✅ Auth.js &mdash; Authentication and Authorization</li>
          <li>✅ Django Inspired &mdash; Admin Dashboard</li>
          <li>✅ Zod &mdash; Data Validation</li>
        </ul>
      </div>
      <div class="p-5">
        <a
          href="/docs"
          class="bg-black text-white dark:bg-white dark:text-black rounded py-4 px-6 text-xl"
        >
          Get Started
        </a>
      </div>
    </div>
  </section>

  <section class="container mx-auto px-6 py-8">
    <h2 class="text-3xl md:text-4xl font-bold text-center">
      Technologies
    </h2>
    <div class="mt-12 flex flex-wrap">
      <div class="w-full md:w-1/3 px-4 py-6">
        <h3 class="text-2xl font-bold">TypeScript</h3>
        <p class="mt-2 text-muted-foreground">
          JavaScript with syntax for types.
        </p>
      </div>
      <div class="w-full md:w-1/3 px-4 py-6">
        <h3 class="text-2xl font-bold">Next.js</h3>
        <p class="mt-2 text-muted-foreground">React Framework.</p>
      </div>
      <div class="w-full md:w-1/3 px-4 py-6">
        <h3 class="text-2xl font-bold">shadcn/ui</h3>
        <p class="mt-2 text-muted-foreground">
          Customizable UI Components.
        </p>
      </div>
      <div class="w-full md:w-1/3 px-4 py-6">
        <h3 class="text-2xl font-bold">Drizzle ORM</h3>
        <p class="mt-2 text-muted-foreground">
          Object Relational Mapper.
        </p>
      </div>
      <div class="w-full md:w-1/3 px-4 py-6">
        <h3 class="text-2xl font-bold">SQL</h3>
        <p class="mt-2 text-muted-foreground">
          PostgreSQL, MySQL, or SQLite.
        </p>
      </div>
      <div class="w-full md:w-1/3 px-4 py-6">
        <h3 class="text-2xl font-bold">TailwindCSS</h3>
        <p class="mt-2 text-muted-foreground">
          Utility-first CSS Framework.
        </p>
      </div>
      <div class="w-full md:w-1/3 px-4 py-6">
        <h3 class="text-2xl font-bold">Auth.js</h3>
        <p class="mt-2 text-muted-foreground">Authentication.</p>
      </div>
      <div class="w-full md:w-1/3 px-4 py-6">
        <h3 class="text-2xl font-bold">Stripe</h3>
        <p class="mt-2 text-muted-foreground">Payment Processing.</p>
      </div>
      <div class="w-full md:w-1/3 px-4 py-6">
        <h3 class="text-2xl font-bold">Zod</h3>
        <p class="mt-2 text-muted-foreground">Data Validations.</p>
      </div>
    </div>
  </section>
{{/layout}}