import { eq } from "drizzle-orm";
import { redirect } from "next/navigation";
import { db } from "@/lib/db";
import { auth } from "@/lib/auth";
import { {{userObj.pluralCamelCase}} } from "@/schema/{{userObj.pluralKebabCase}}";
import { PrivateShell } from "@/components/private/layout/private-shell";
import { PrivateContent } from "@/components/private/layout/private-content";
import { PrivateSidebar } from "@/components/private/layout/private-sidebar";
import { PrivateHeader } from "@/components/private/layout/private-header";
import { FlashMessage } from "@/components/ui/flash-message";

export default async function Layout({
  children,
}: {
  children: React.ReactNode;
}) {
  const session = await auth();

  if (!session?.user?.id) {
    redirect("/signin");
  }

  const userObj = await db.query.{{userObj.pluralCamelCase}}.findFirst({
    where: eq({{userObj.pluralCamelCase}}.id, session.user.id),
  });

  if (!userObj) {
    redirect("/signin");
  }

  return (
    <PrivateShell>
      <PrivateHeader user={userObj} />
      <PrivateSidebar />
      <PrivateContent>
        <FlashMessage />
        {children}
      </PrivateContent>
    </PrivateShell>
  );
}

export const dynamic = "force-dynamic";
