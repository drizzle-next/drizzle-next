import { cookies } from "next/headers";
import { Alert } from "./ui/alert";

export async function Notice() {
  const cookieStore = await cookies();

  const danger = cookieStore.get("notice-danger");
  const warning = cookieStore.get("notice-warning");
  const info = cookieStore.get("notice-info");
  const success = cookieStore.get("notice-success");

  if (danger) {
    return (
      <Alert variant="danger" className="m-5">
        {danger?.value}
      </Alert>
    );
  }

  if (warning) {
    return (
      <Alert variant="warning" className="m-5">
        {warning?.value}
      </Alert>
    );
  }

  if (info) {
    return (
      <Alert variant="info" className="m-5">
        {info?.value}
      </Alert>
    );
  }

  if (success) {
    return (
      <Alert variant="success" className="m-5">
        {success?.value}
      </Alert>
    );
  }
}
