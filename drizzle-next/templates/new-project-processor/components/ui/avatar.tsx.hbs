import * as React from "react";
import { cn } from "@/lib/utils";

const Avatar = ({
  src,
  className,
  children,
}: {
  src?: string | null;
  className?: string;
  children?: React.ReactNode;
}) => (
  <div>
    {src ? (
      <img
        className={cn("w-6 h-6 rounded-full", className)}
        src={src}
        alt="avatar"
      />
    ) : (
      <div>{children}</div>
    )}
  </div>
);
Avatar.displayName = "Avatar";

export { Avatar };
