import { and, desc, eq } from "drizzle-orm";
import { db } from "./db";
import { orders, subscriptions } from "@/schema/stripe";

export async function hasProduct(userId: string, productId: string) {
  const orderRecord = await db.query.orders.findFirst({
    where: and(eq(orders.userId, userId), eq(orders.productId, productId)),
  });
  if (!orderRecord) {
    return false;
  }
  return true;
}

export async function hasActiveSubscription(userId: string) {
  const subscriptionRecord = await db.query.subscriptions.findFirst({
    where: eq(subscriptions.userId, userId),
    orderBy: desc(subscriptions.createdAt),
  });

  if (!subscriptionRecord) {
    return false;
  }

  const expireDate = new Date(subscriptionRecord.endDate);
  expireDate.setDate(expireDate.getDate() + 2);
  const now = new Date();

  if (now < expireDate) {
    return true;
  }

  return false;
}
