import { auth } from "@/lib/auth";
import { config } from "@/lib/config";
import { db } from "@/lib/db";
import { products } from "@/schema/stripe";
import { users } from "@/schema/users";
import { eq } from "drizzle-orm";
import { notFound, redirect } from "next/navigation";

const stripe = require("stripe")(config.STRIPE_SECRET_KEY);

export async function POST(req: Request) {
  const session = await auth();

  if (!session?.user?.id) {
    redirect("/signin");
  }

  const userRecord = await db.query.users.findFirst({
    where: eq(users.id, session.user.id),
  });

  if (!userRecord) {
    notFound();
  }

  const formData = await req.formData();

  const slug = formData.get("slug")?.toString();

  if (!slug) {
    notFound();
  }

  const productRecord = await db.query.products.findFirst({
    where: eq(products.slug, slug),
  });

  if (!productRecord) {
    notFound();
  }

  try {
    // Create Checkout Sessions from body params.
    const session = await stripe.checkout.sessions.create({
      customer_email: userRecord.email,
      line_items: [
        {
          // Provide the exact Price ID (for example, pr_1234) of the product you want to sell
          price: productRecord.stripe_price_id,
          quantity: 1,
        },
      ],
      mode: productRecord?.mode,
      success_url: `${req.headers.get("origin")}/confirmation/?success=true`,
      cancel_url: `${req.headers.get("origin")}/confirmation/?canceled=true`,
      allow_promotion_codes: true,
    });
    return Response.redirect(session.url);
  } catch (err: any) {
    console.error(err);
    return Response.json(err.message, { status: 500 });
  }
}
