.tiptap h1 {
  font-size: 40px;
}

.tiptap h2 {
  font-size: 32px;
}

.tiptap h3 {
  font-size: 24px;
}

.tiptap ul li {
  list-style-type: disc;
  margin-left: 20px;
}

.tiptap ol li {
  list-style-type: decimal;
  margin-left: 20px;
}

.tiptap a {
  font-weight: bold;
  text-decoration: underline;
}

.ProseMirror:focus {
  outline: none;
}
